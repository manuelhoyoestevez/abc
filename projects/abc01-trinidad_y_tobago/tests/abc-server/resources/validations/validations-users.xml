<?xml version="1.0" encoding="UTF-8"?>


<validations name="Users">

	<validation name="validateCreateUser">

		<field name="name">
			<field-validator type="required" />
		</field>

		<field name="surname">
			<field-validator type="required" />
		</field>

	</validation>

	<validation name="validateAddCredential">

		<field name="account">
			<field-validator type="required" />
		</field>

		<field name="password">
			<field-validator type="required" />
		</field>

	</validation>

	<validation name="validateRoles">

		<field name="roles">
			<field-validator type="required" />
		</field>

	</validation>


</validations>

