<?xml version="1.0" encoding="UTF-8"?>


<validations name="Security">


	<validation name="validateSource">

		<field name="sourceCode">
			<field-validator type="required" />
		</field>

	</validation>


	<validation name="validateSource2">

		<field name="projectCode">
			<field-validator type="required" />
		</field>

		<field name="systemCode">
			<field-validator type="required" />
		</field>

		<field name="sourceCode">
			<field-validator type="required" />
		</field>

	</validation>


	<validation name="validateLogin">

		<field name="account">
			<field-validator type="required" />
		</field>

		<field name="password">
			<field-validator type="required" />
		</field>

	</validation>


	<validation name="validateChangePassword">

		<field name="account">
			<field-validator type="required" />
		</field>

		<field name="currentPassword">
			<field-validator type="required" />
		</field>

		<field name="newPassword">
			<field-validator type="required" />
		</field>

	</validation>


</validations>

